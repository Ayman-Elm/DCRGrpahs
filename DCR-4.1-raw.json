{
  "DCRModel": [
    {
      "title": "Offers under the Danish Active Employment Efforts Act",
      "description": "A process for initiating, accepting, and following up on employment offers regulated by Danish law, including notification, absence, and complaint handling.",
      "type": "DCRModel",
      "roles": [],
      "events": [
        {
          "id": "make_offer",
          "label": "Make offer"
        },
        {
          "id": "receive_offer",
          "label": "Receive offer"
        },
        {
          "id": "accept_offer",
          "label": "Accept offer"
        },
        {
          "id": "sign_individual_agreement",
          "label": "Sign individual agreement"
        },
        {
          "id": "begin_participation",
          "label": "Begin participation"
        },
        {
          "id": "notify_absence_recipient",
          "label": "Notify jobcenter of absence"
        },
        {
          "id": "notify_absence_site",
          "label": "Notify jobcenter/site of termination or absence"
        },
        {
          "id": "submit_complaint",
          "label": "Submit complaint"
        },
        {
          "id": "handle_complaint",
          "label": "Handle complaint"
        },
        {
          "id": "forward_complaint",
          "label": "Forward complaint to Appeals Board"
        },
        {
          "id": "apply_assistance",
          "label": "Apply for assistance tools/mentor"
        }
      ],
      "rules": [
        {
          "type": "response",
          "source": "make_offer",
          "target": "receive_offer",
          "description": "Offer must be received after it is made."
        },
        {
          "type": "condition",
          "source": "make_offer",
          "target": "begin_participation",
          "description": "Participation cannot begin before an offer is made."
        },
        {
          "type": "response",
          "source": "receive_offer",
          "target": "accept_offer",
          "description": "Offer must be accepted after it is received."
        },
        {
          "type": "condition",
          "source": "accept_offer",
          "target": "begin_participation",
          "description": "Participation cannot begin before the offer is accepted."
        },
        {
          "type": "milestone",
          "source": "sign_individual_agreement",
          "target": "begin_participation",
          "description": "If required, individual agreement must be signed before participation begins."
        },
        {
          "type": "response",
          "source": "accept_offer",
          "target": "sign_individual_agreement",
          "description": "If needed, signing follows acceptance."
        },
        {
          "type": "response",
          "source": "begin_participation",
          "target": "notify_absence_recipient",
          "description": "Absence notification by recipient may occur during participation."
        },
        {
          "type": "response",
          "source": "begin_participation",
          "target": "notify_absence_site",
          "description": "Absence/termination notification by site may occur during participation."
        },
        {
          "type": "milestone",
          "source": "submit_complaint",
          "target": "handle_complaint",
          "description": "Any submitted complaint must be processed by the jobcenter.",
          "duration": "P4W"
        },
        {
          "type": "response",
          "source": "handle_complaint",
          "target": "forward_complaint",
          "description": "If complaint is not upheld, it must be forwarded to Appeals Board."
        },
        {
          "type": "condition",
          "source": "begin_participation",
          "target": "apply_assistance",
          "description": "Assistance tools/mentor can only be applied for during participation."
        }
      ],
      "marking": {
        "executed": [],
        "included": [
          "make_offer",
          "receive_offer",
          "accept_offer",
          "sign_individual_agreement",
          "begin_participation",
          "notify_absence_recipient",
          "notify_absence_site",
          "submit_complaint",
          "handle_complaint",
          "forward_complaint",
          "apply_assistance"
        ],
        "pending": []
      }
    }
  ]
}