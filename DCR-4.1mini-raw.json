{
  "DCRModel": [
    {
      "title": "Active Employment Offer Process",
      "description": "Process covering the issuance, acknowledgment, execution, absence reporting, complaint handling, and compensation related to active employment offers.",
      "type": "DCRModel",
      "roles": [],
      "events": [
        {
          "id": "offer_issued",
          "label": "Jobcenter issues employment offer"
        },
        {
          "id": "offer_received",
          "label": "Tilbudsmodtager receives offer and documentation"
        },
        {
          "id": "offer_confirmation_signed",
          "label": "Tilbudsmodtager signs and returns offer confirmation (blad 2, pages 1&2)"
        },
        {
          "id": "individual_agreement_signed",
          "label": "Tilbudsmodtager signs and returns individual agreement (blad 3) if applicable"
        },
        {
          "id": "offer_period_started",
          "label": "Tilbudsmodtager begins tilbudsforløb (offer period/activity)"
        },
        {
          "id": "notify_sickness_absence",
          "label": "Tilbudsmodtager notifies absence due to sickness immediately"
        },
        {
          "id": "arrange_vacation",
          "label": "Tilbudsmodtager arranges agreed vacation with tilbudssted"
        },
        {
          "id": "absence_or_termination_reported",
          "label": "Tilbudssted reports absence or termination to jobcenter"
        },
        {
          "id": "communication_followup",
          "label": "Communication and follow-up between parties as scheduled"
        },
        {
          "id": "complaint_filed",
          "label": "Tilbudsmodtager files complaint within 4 weeks if dissatisfied"
        },
        {
          "id": "complaint_reviewed",
          "label": "Jobcenter reviews complaint and may forward to Appeals Board"
        },
        {
          "id": "funding_applied",
          "label": "Tilbudssted applies for funding for aids or mentor support"
        },
        {
          "id": "injury_compensation_processed",
          "label": "Jobcenter processes compensation claims for injuries during tilbudsforløb"
        },
        {
          "id": "offer_period_completed",
          "label": "Tilbudsmodtager completes tilbudsforløb activities"
        }
      ],
      "rules": [
        {
          "type": "condition",
          "source": "offer_confirmation_signed",
          "target": "offer_period_started",
          "description": "Offer confirmation must be signed and returned before starting tilbudsforløb"
        },
        {
          "type": "condition",
          "source": "individual_agreement_signed",
          "target": "offer_period_started",
          "description": "If individual agreement exists, it must be signed and returned before or at start"
        },
        {
          "type": "milestone",
          "source": "offer_received",
          "target": "offer_confirmation_signed",
          "description": "Tilbudsmodtager must receive and acknowledge offer before signing confirmation"
        },
        {
          "type": "response",
          "source": "offer_issued",
          "target": "offer_received",
          "description": "Offer issuance requires tilbudsmodtager to receive the offer"
        },
        {
          "type": "condition",
          "source": "notify_sickness_absence",
          "target": "offer_period_started",
          "description": "Sickness absence must be reported immediately after tilbudsforløb start"
        },
        {
          "type": "response",
          "source": "arrange_vacation",
          "target": "offer_period_started",
          "description": "Vacation must be arranged during tilbudsforløb as agreed"
        },
        {
          "type": "response",
          "source": "absence_or_termination_reported",
          "target": "offer_period_started",
          "description": "Tilbudssted must report any absence or termination promptly"
        },
        {
          "type": "include",
          "source": "complaint_filed",
          "target": "complaint_reviewed",
          "description": "Complaint filing triggers review by jobcenter"
        },
        {
          "type": "condition",
          "source": "complaint_filed",
          "target": "offer_received",
          "description": "Complaint must be filed within 4 weeks from offer receipt",
          "duration": "P28D"
        },
        {
          "type": "response",
          "source": "communication_followup",
          "target": "offer_period_started",
          "description": "Continuous communication and follow-up occur during tilbudsforløb"
        },
        {
          "type": "include",
          "source": "funding_applied",
          "target": "offer_period_started",
          "description": "Funding for aids or mentorship may be applied during tilbudsforløb"
        },
        {
          "type": "response",
          "source": "offer_period_started",
          "target": "injury_compensation_processed",
          "description": "Jobcenter processes injury compensation claims during tilbudsforløb"
        },
        {
          "type": "response",
          "source": "offer_period_started",
          "target": "offer_period_completed",
          "description": "Tilbudsforløb activities are to be completed after start"
        }
      ],
      "marking": {
        "executed": [],
        "included": [
          "offer_issued",
          "offer_received",
          "offer_confirmation_signed",
          "individual_agreement_signed",
          "offer_period_started",
          "notify_sickness_absence",
          "arrange_vacation",
          "absence_or_termination_reported",
          "communication_followup",
          "complaint_filed",
          "complaint_reviewed",
          "funding_applied",
          "injury_compensation_processed",
          "offer_period_completed"
        ],
        "pending": []
      }
    }
  ]
}